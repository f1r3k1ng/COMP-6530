# This file is generated from information provided by the datasource.  Changes
# to it will not persist across an instance reboot.  To disable cloud-init's
# network configuration capabilities, write a file
# /etc/cloud/cloud.cfg.d/99-disable-network-config.cfg with the following:
# network: {config: disabled}
network:
    version: 2
    bridges:
        br0:
            interfaces: [ens3]
            addresses: [20.0.0.30/24]
            gateway4: 20.0.0.10
            mtu: 1400
            nameservers:
                addresses: [8.8.8.8]
    ethernets:
        ens3:
            macaddress: fa:16:3e:39:f1:cd
        ens4:
            dhcp4: true
            addresses: [30.0.0.30/24]
            match:
                macaddress: fa:16:3e:9a:e8:bd
            mtu: 1400
            set-name: ens4
        ens5:
            dhcp4: true
            addresses: [40.0.0.30/24]
            match:
                macaddress: fa:16:3e:6a:65:6c
            mtu: 1400
            set-name: ens5

